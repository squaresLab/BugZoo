fool ()
{
case $@ in
    sisi )  echo sisi;;
    gaga | gigi )   echo gaga or gigi;;
    dodo )  echo dodo;;
    * )     echo none of these;;
esac
}

koo ()
{
case $@ in
    sisi )  echo sisi;;
    gaga | gigi )   echo gaga or gigi;;
    dodo )  echo dodo;;
    dodo )  echo dodo again;;
    * )     echo none of these;;
esac
}

